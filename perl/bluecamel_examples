--------------

sysopen(FH, $path, O_RDWR | O_CREAT);

--------------

sysopen(FH, $path, O_RDWR | O_EXCL | O_CREAT);

--------------

sysopen(FH, $path, O_WRONLY | O_NONBLOCK);

