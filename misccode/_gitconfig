[user]
	name = Bob Heckel
	email = rsh86800@gsk.com
[core]
	editor = vim
	pager = less -+F -+S -+X
[merge]
	tool = vimdiff
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
	fshow = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
	edit  = ! sh -c '$EDITOR `git fshow $1`' -
